{
  "name": "@helia-react-components/helia-provider",
  "version": "0.0.1",
  "description": "A React Provider, Context, and hook component for Helia",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipfs/helia/tree/main/packages/helia#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs/helia.git"
  },
  "bugs": {
    "url": "https://github.com/ipfs/helia/issues"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "keywords": [
    "IPFS"
  ],
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./jsx-runtime": "./jsx-runtime.js",
    "./jsx-dev-runtime": "./jsx-dev-runtime.js"
  },
  "eslintConfig": {
    "extends": "ipfs",
    "parserOptions": {
      "project": true,
      "sourceType": "module"
    }
  },
  "scripts": {
    "clean": "aegir clean",
    "lint": "aegir lint",
    "dep-check": "aegir dep-check",
    "build": "aegir build",
    "test": "npm run test:chrome",
    "test:chrome": "aegir test -t browser --cov",
    "test:firefox": "aegir test -t browser -- --browser firefox",
    "prepublishOnly": "node scripts/update-version.js && npm run build"
  },
  "dependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.12",
    "aegir": "^45.0.7",
    "helia": "^5.1.0",
    "p-defer": "^4.0.1"
  },
  "peerDependencies": {
    "helia": "^5.1.0",
    "react": ">=18.0.0"
  },
  "sideEffects": false
}
